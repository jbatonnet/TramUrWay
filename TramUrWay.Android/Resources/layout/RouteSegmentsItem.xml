        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textColor="@android:color/primary_text_light"
        android:layout_toRightOf="@id/RouteSegmentsItem_Background"
        android:layout_alignTop="@+id/RouteSegmentsItem_Background"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/RouteSegmentsItem_Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 min"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColor="@android:color/tertiary_text_dark"
        android:layout_alignTop="@+id/RouteSegmentsItem_From"
        android:layout_toRightOf="@+id/RouteSegmentsItem_From"
        android:layout_toLeftOf="@+id/RouteSegmentsItem_To"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignBottom="@+id/RouteSegmentsItem_From" />

    <TextView
        android:id="@+id/RouteSegmentsItem_To"
