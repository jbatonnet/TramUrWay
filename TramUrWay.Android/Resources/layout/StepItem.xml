<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/StepItem_IconLayout">

        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#f29400"
            android:layout_centerHorizontal="true"
            android:id="@+id/StepItem_Rail1"
            android:orientation="vertical"
            android:layout_marginBottom="-4dp"
            android:layout_above="@+id/StepItem_Dot" />

        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#f29400"
            android:layout_centerHorizontal="true"
            android:id="@+id/StepItem_Rail2"
            android:orientation="vertical"
            android:layout_below="@+id/StepItem_Dot"
            android:layout_marginTop="-4dp" />

        <ImageView
            android:id="@+id/StepItem_Dot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true" />

        <TopAlignedImageView
            android:id="@+id/StepItem_Icon1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp" />

        <TopAlignedImageView
            android:id="@+id/StepItem_Icon2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/StepItem_IconLayout">

        <TextView
            android:id="@+id/StepItem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:text="Name"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/StepItem_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:textColor="@android:color/tertiary_text_light"
            android:layout_below="@+id/StepItem_Name"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/StepItem_Favorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:tint="@color/primary_dark_material_light"
        android:src="@drawable/ic_star_border"
        android:focusable="true"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="12dp" />

</RelativeLayout>